<config>
    <modules>
        <Lexel_UkAddressFinder>
            <version>0.2.0</version>
        </Lexel_UkAddressFinder>
    </modules>
    
    <global>
        <helpers>
            <addressfinder>
                <class>Lexel_UkAddressFinder_Helper</class>
            </addressfinder>
        </helpers>
    </global>
    
    <frontend>
        <routers>
            <addressfinder>
                <use>standard</use>
                <args>
                    <module>Lexel_UkAddressFinder</module>
                    <frontName>addressfinder</frontName>
                </args>
            </addressfinder>
        </routers>
        <layout>
            <updates>
                <addressfinder>
                    <file>addressfinder.xml</file>
                </addressfinder>
            </updates>
        </layout>
    </frontend>
    
    <admin>
        <routers>
			<addressfinder>
				<use>admin</use>
				<args>
					<module>Lexel_UkAddressFinder</module>
					<frontName>addressfinder</frontName>
				</args>
			</addressfinder>
        </routers>
    </admin>
    
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Lexel_UkAddressFinder>
							<title>UkAddressFinder Module</title>
							<sort_order>10</sort_order>
						</Lexel_UkAddressFinder>
						<system>
							<children>
								<config>
									<children>
										<addressfinder translate="title" module="addressfinder">
											<title>UkAddressFinder Section</title>
										</addressfinder>
									</children>
								</config>
							</children>
                    	</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
</config>